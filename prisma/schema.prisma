generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Quote {
  id          String   @id @default(uuid())
  quoteNo     String   @unique // ES-YYMM-MMSEQ-YEARSEQ
  date        DateTime
  
  // Recipient Info
  recipientName    String
  recipientContact String? // Contact person (e.g., Bae Il-kwon Manager)
  
  // Supplier Info (JSON or separate table, keeping simple for now)
  supplierInfo Json

  // Totals
  subtotal    Float
  discount    Float    @default(0)
  supplyPrice Float
  vat         Float
  total       Float

  items       QuoteItem[]
  notes       String?
  excelFilePath String?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model QuoteItem {
  id        String @id @default(uuid())
  quoteId   String
  quote     Quote  @relation(fields: [quoteId], references: [id], onDelete: Cascade)
  
  name      String // Poom-myung
  process   String // Gong-jeong (Process) instead of Spec
  qty       Int
  unitPrice Float? // Null if 'Separate Quote', 0 if free
  amount    Float
  note      String?
  
  order     Int    // Update order
}

model FileSnapshot {
  id               String   @id @default(uuid())
  fileName         String
  filePath         String?
  year             Int?
  currentWw        String?
  writtenAt        String?
  writtenDatetime  DateTime?
  revNumber        Int?
  fileModifiedAt   DateTime?
  importedAt       DateTime @default(now())
  rowCount         Int?

  orders           ProductionOrder[]

  @@unique([fileName, fileModifiedAt])
}

model ProductionOrder {
  id                String   @id @default(uuid())
  snapshotId        String
  snapshot          FileSnapshot @relation(fields: [snapshotId], references: [id], onDelete: Cascade)
  rowNumber         Int?

  weekNo            String?
  weekNoInt         Int?
  rowType           String?

  clientName        String?
  modelName         String?
  quantityRaw       String?
  quantityInt       Int?

  orderDateRaw      String?
  orderDate         DateTime?  @db.Date
  orderMonth        Int?
  orderSeq          String?
  deadlineRaw       String?
  deadlineDate      DateTime?  @db.Date

  versionMgmt       String?
  line              String?
  boardSide         String?
  postProcess       String?
  rohs              String?

  pcbScheduleRaw    String?
  pcbScheduleDate   DateTime?  @db.Date
  materialInRaw     String?
  materialInDate    DateTime?  @db.Date
  workOrderRaw      String?
  workOrderDate     DateTime?  @db.Date
  materialOutRaw    String?
  materialOutDate   DateTime?  @db.Date
  pcbVendor         String?
  estimateStatus    String?
  maskStatus        String?

  note              String?

  cellBgColorB      String?
  cellBgColorC      String?

  @@index([snapshotId])
  @@index([clientName])
  @@index([modelName])
  @@index([weekNoInt])
}
